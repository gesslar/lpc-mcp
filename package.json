{
  "name": "@gesslar/lpc-mcp",
  "description": "MCP server for LPC language server",
  "author": {
    "name": "gesslar",
    "url": "https://gesslar.dev"
  },
  "version": "1.5.0",
  "license": "Unlicense",
  "homepage": "https://github.com/gesslar/lpc-mcp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gesslar/lpc-mcp.git"
  },
  "keywords": [
    "fluffos",
    "lpc",
    "mud",
    "mcp",
    "model-context-protocol",
    "shlemiel",
    "schlemazel",
    "hasenpfeffer",
    "incorporated"
  ],
  "packageManager": "pnpm@10.28.0",
  "main": "index.js",
  "type": "module",
  "bin": {
    "lpc-mcp": "./src/index.js"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "start": "node src/index.js",
    "types:build": "tsc -p tsconfig.types.json",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "submit": "pnpm publish --access public --//registry.npmjs.org/:_authToken=\"${NPM_ACCESS_TOKEN}\"",
    "update": "pnpm self-update && pnpx npm-check-updates -u && pnpm install",
    "pr": "gt submit -p --ai",
    "patch": "pnpm version patch",
    "minor": "pnpm version minor",
    "major": "pnpm version major"
  },
  "dependencies": {
    "@gesslar/toolkit": "^3.23.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "vscode-jsonrpc": "^8.2.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@gesslar/uglier": "^1.1.0",
    "eslint": "^9.39.2"
  }
}
