{
  "name": "@gesslar/lpc-mcp",
  "version": "0.1.1",
  "description": "MCP server for LPC language server",
  "main": "index.js",
  "type": "module",
  "bin": {
    "lpc-mcp": "./src/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "node src/index.js",
    "types:build": "tsc -p tsconfig.types.json",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "submit": "npm publish --access public",
    "update": "npx npm-check-updates -u && npm install",
    "test": "node --test tests/unit/*.test.js",
    "pr": "gt submit --publish --restack --ai",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gesslar/lpc-mcp.git"
  },
  "keywords": [],
  "author": "gesslar",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/gesslar/lpc-mcp/issues"
  },
  "homepage": "https://github.com/gesslar/lpc-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "vscode-jsonrpc": "^8.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@stylistic/eslint-plugin": "^5.5.0",
    "eslint-plugin-jsdoc": "^61.1.11",
    "globals": "^16.5.0"
  }
}
